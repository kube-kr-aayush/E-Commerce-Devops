pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/kube-kr-aayush/E-Commerce-Devops'
            }
        }

        stage('Build Backend') {
            steps {
                sh 'docker build -t ecommerce-backend:ci ./backend'
            }
        }

        stage('Build Frontend') {
            steps {
                sh 'docker build -t ecommerce-frontend:ci ./frontend'
            }
        }

        stage('Build Admin') {
            steps {
                sh 'docker build -t ecommerce-admin:ci ./admin'
            }
        }
    }
}

