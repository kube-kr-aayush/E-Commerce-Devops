pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            when {
                anyOf {
                    changeset "backend/**"
                    changeset "docker-compose.yml"
                    changeset "Jenkinsfile"
                }
            }
            steps {
                sh 'docker build -t ecommerce-backend:ci ./backend'
            }
        }

        stage('Build Frontend') {
            when {
                anyOf {
                    changeset "frontend/**"
                    changeset "docker-compose.yml"
                    changeset "Jenkinsfile"
                }
            }
            steps {
                sh 'docker build -t ecommerce-frontend:ci ./frontend'
            }
        }

        stage('Build Admin') {
            when {
                anyOf {
                    changeset "admin/**"
                    changeset "docker-compose.yml"
                    changeset "Jenkinsfile"
                }
            }
            steps {
                sh 'docker build -t ecommerce-admin:ci ./admin'
            }
        }
    }
}

